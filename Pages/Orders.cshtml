@page
@model OrdersModel
@{
}

<h3>Orders</h3> 

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Pizza name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.pizzaOrders) {
            <tr>
                <th>
                    @order.Id
                </th>
                <th>
                    @order.PizzaName
                </th>
                <th>
                   @order.BasePrice
                </th>
            </tr>
        }
    </tbody>
</table>